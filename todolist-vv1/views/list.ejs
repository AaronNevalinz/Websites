
<%- include('header') -%>

    <div class="box">
        <h1><%= getDate%> </h1>

        <div class="container">
            <% for(let i = 0; i < newListItem.length; i++){%>
                <div class="items">
                    <input type="checkbox">
                    <p><%=newListItem[i]%></p>
                </div>
            <%}%>
    
            <form action="/" method="POST">
                <input type="text" name="newItem" placeholder="New Item">
                <button>+</button>
            </form>
        </div>
    </div>


